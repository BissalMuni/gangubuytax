  "rate_relationships": {
    "base_rate_system": {
      "primary": "housing",
      "description": "주택 세율을 기준으로 다른 재산 세율 설정",
      "relationships": [
        {
          "from": "housing",
          "to": "buildings",
          "relationship_type": "base_reference",
          "description": "건물 세율은 주택 세율을 기반으로 설정"
        },
        {
          "from": "buildings",
          "to": "land",
          "relationship_type": "derivative",
          "description": "토지 세율은 건물 세율에서 파생"
        },
        {
          "from": "housing",
          "to": "agricultural_land",
          "relationship_type": "independent_with_reference",
          "description": "농지는 독립적이나 주택 세율을 참조"
        }
      ]
    },
    "corporate_multipliers": {
      "description": "법인 취득 시 개인 세율 기반 중과세 적용",
      "base_calculation": "personal_rate + corporate_penalty",
      "relationships": [
        {
          "property_type": "housing",
          "corporate_penalty": "+4.0%",
          "total_rate": "personal_housing_rate + 4.0%"
        },
        {
          "property_type": "buildings", 
          "corporate_penalty": "0.0%",
          "total_rate": "same_as_personal_rate"
        }
      ]
    }
  },
  "exemption_relationships": {
    "cascading_exemptions": {
      "description": "상위 카테고리 감면이 하위 카테곤리에 영향",
      "rules": [
        {
          "parent_category": "housing",
          "child_categories": ["residential_land"],
          "exemption_inheritance": "partial",
          "description": "주택 감면 시 부속 토지에도 일부 적용"
        }
      ]
    },
    "conflicting_exemptions": {
      "description": "상충되는 감면 조건 정의",
      "conflicts": [
        {
          "exemption_1": "first_time_buyer",
          "exemption_2": "one_household_one_house",
          "resolution": "higher_exemption_rate_applied",
          "note": "더 높은 감면율 적용"
        }
      ]
    }
  },
  "calculation_dependencies": {
    "tax_calculation_order": {
      "description": "세금 계산 순서와 의존 관계",
      "sequence": [
        {
          "step": 1,
          "calculation": "acquisition_tax",
          "formula": "tax_base × acquisition_rate",
          "dependencies": ["tax_base", "property_type", "acquisition_type"]
        },
        {
          "step": 2,
          "calculation": "local_education_tax", 
          "formula": "acquisition_tax × education_rate",
          "dependencies": ["acquisition_tax"]
        },
        {
          "step": 3,
          "calculation": "agricultural_tax",
          "formula": "acquisition_tax × agricultural_rate",
          "dependencies": ["acquisition_tax"],
          "exemptions": ["under_85sqm_housing", "inheritance_cases"]
        },
        {
          "step": 4,
          "calculation": "total_tax",
          "formula": "acquisition_tax + local_education_tax + agricultural_tax",
          "dependencies": ["all_previous_calculations"]
        }
      ]
    },
    "rate_determination_factors": {
      "primary_factors": [
        "property_type",
        "acquisition_type", 
        "acquirer_status"
      ],
      "secondary_factors": [
        "property_value",
        "location",
        "intended_use"
      ],
      "decision_tree": {
        "property_type": {
          "housing": {
            "acquisition_type": {
              "paid": "standard_housing_rates",
              "free": "inheritance_gift_rates",
              "original": "construction_rates"
            }
          },
          "building": {
            "acquirer_status": {
              "individual": "personal_building_rates",
              "corporation": "corporate_building_rates"
            }
          }
        }
      }
    }
  },
  "cross_reference_validation": {
    "consistency_checks": [
      {
        "check_id": "PROP_REL_001",
        "description": "법인 주택 세율이 개인 주택 세율 + 4%인지 확인",
        "validation_logic": "corporate_housing_rate == personal_housing_rate + 4.0%"
      },
      {
        "check_id": "PROP_REL_002",
        "description": "건물 기본 세율이 주택 세율과 일치하는지 확인",
        "validation_logic": "building_base_rate == housing_base_rate"
      }
    ]
  }
}